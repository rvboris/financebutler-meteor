html, body
  height 100%

[ui-view]
  flex 1
  flex-direction column
  display flex

[ui-view].ng-enter, [ui-view].ng-leave
  position absolute
  left 0
  right 0
  bottom 0
  top 0
  transition opacity .5s ease-in-out

[ui-view].ng-enter
  opacity 0

[ui-view].ng-enter-active
  opacity 1

[ui-view].ng-leave
  opacity 1

[ui-view].ng-leave-active
  opacity 0
